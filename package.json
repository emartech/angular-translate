{
  "name": "@emartech/angular-translate",
  "description": "Translate module for Angular",
  "keywords": [
    "angular",
    "angular2",
    "translate",
    "i18n"
  ],
  "main": "dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "test": "mocha --require core-js/shim --require reflect-metadata --require ts-node/register lib/**/*.spec.ts",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "build": "rimraf dist && ngc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emartech/angular-translate.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emartech/angular-translate/issues"
  },
  "release": {
    "verifyConditions": {
      "path": "./node_modules/semantic-release/src/lib/plugin-noop.js"
    }
  },
  "homepage": "https://github.com/emartech/angular-translate#readme",
  "dependencies": {
    "flat": "^1.6.0",
    "ramda": "^0.23.0",
    "sprintf-js": "^1.0.3"
  },
  "peerDependencies": {
    "@angular/core": "^2.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@angular/compiler": "2.4.1",
    "@angular/compiler-cli": "2.4.1",
    "@angular/core": "2.4.1",
    "@types/chai": "^3.4.34",
    "@types/core-js": "0.9.35",
    "@types/flat": "0.0.28",
    "@types/mocha": "2.2.35",
    "@types/node": "6.0.57",
    "@types/ramda": "0.0.7",
    "@types/sprintf-js": "0.0.27",
    "chai": "3.5.0",
    "core-js": "2.4.1",
    "mocha": "2.4.5",
    "reflect-metadata": "0.1.8",
    "rimraf": "2.5.2",
    "rxjs": "5.0.1",
    "semantic-release": "6.3.2",
    "ts-node": "0.7.0",
    "typescript": "2.0.10",
    "typings": "2.0.0",
    "zone.js": "0.7.2"
  }
}
