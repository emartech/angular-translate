{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2019",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "declaration": true,
    "outDir": "./dist",
    "types": ["chai", "node", "mocha"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "filesGlob": [
    "index.ts",
    "./lib/*.ts"
  ]
}
