{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist/",
    "types": ["chai", "core-js", "node", "mocha"]
  },
  "exclude": [
    "node_modules",
    "./test/**/*.spec.ts"
  ],
  "filesGlob": [
    "./lib/**/*.ts",
    "!./node_modules/**/*.ts"
  ]
}
